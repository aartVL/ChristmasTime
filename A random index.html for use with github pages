Code with added character set for more awesome UTF8 characters
Console.OutputEncoding = Encoding.UTF8;
 
            Console.WriteLine("Alternating characters within a line \n");
 
            for (int i = 0; i < 8; i++) // Outer loop for rows

            {

                for (int j = 0; j < 8; j++) // Inner loop for columns

                {

                    if (j % 3 == 0)

                    {

                        Console.Write("@ "); // Print a dash

                    }

                    else if (j % 2 == 0)

                    {

                        Console.Write("* "); // Print a star

                    }

                    else if (j % 2 == 1)

                    {

                        Console.Write("# "); // Print a dash

                    }

                }

                Console.WriteLine(); // Move to the next line after each row

            }
 
            Console.WriteLine();

            Console.WriteLine("Alternating characters between lines \n");
 
            for (int i = 0; i < 8; i++) // Outer loop for rows

            {

                for (int j = 0; j < 8; j++) // Inner loop for columns

                {
 
                    if (i % 2 == 0)

                    {

                        Console.Write("* "); // Print a star

                    }

                    if (i % 2 == 1)

                    {

                        Console.Write("# "); // Print a dash

                    }

                }

                Console.WriteLine(); // Move to the next line after each row

            }
 
            Console.WriteLine();

            Console.WriteLine("Chesty's Sweater!");

            Console.WriteLine("Switching characters on switching lines \n");
 
            for (int i = 0; i < 3; i++) // Outer loop for rows

            {

                for (int j = 0; j < 7; j++) // Inner loop for columns

                {

                    if (i % 2 == 0)

                    {

                        if (j % 2 == 0)

                        {

                            Console.ForegroundColor = ConsoleColor.Green;

                            Console.BackgroundColor = ConsoleColor.DarkRed;

                            Console.Write(" ☺ "); // Print a star

                        }

                        if (j % 2 == 1)

                        {

                            Console.ForegroundColor = ConsoleColor.Red;

                            Console.BackgroundColor = ConsoleColor.DarkGreen;

                            Console.Write(" ♥ "); // Print a dash

                        }

                    }
 
                    if (i % 2 == 1)

                    {

                        if (j % 2 == 1)

                        {

                            Console.ForegroundColor = ConsoleColor.Green;

                            Console.BackgroundColor = ConsoleColor.DarkRed;

                            Console.Write(" ☺ "); // Print a star

                        }

                        if (j % 2 == 0)

                        {

                            Console.ForegroundColor = ConsoleColor.Red;

                            Console.BackgroundColor = ConsoleColor.DarkGreen;

                            Console.Write(" ♥ "); // Print a dash

                        }

                    }
 
                }

                Console.WriteLine(); // Move to the next line after each row

            }
 
            Console.ForegroundColor= ConsoleColor.White; // reset the color

            Console.BackgroundColor = ConsoleColor.Black; // reset the color

